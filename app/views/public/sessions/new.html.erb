<div class="container">
  <h2 class="pt-4">ログイン</h2>
  <h5 class="pl-5 pt-4">会員の方はこちらからログイン</h5>
  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="row">
      <div class="field col-3 text-right mt-3">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-9 mt-3 pl-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="row">
      <div class="field col-3 text-right mt-3">
        <%= f.label "パスワード" %>
      </div>
      <div class="col-9 mt-3 pl-5">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 mt-5"></div>
      <div class="actions col-9 mt-5 pl-5">
        <%= f.submit "ログイン", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <h5 class="pl-5 pt-4">会員登録がお済みでない方</h5>
  <div class="row">
    <div class="col-2"></div>
    <div class="mt-3">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
