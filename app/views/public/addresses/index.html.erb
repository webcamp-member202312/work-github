<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="mt-4">配送先登録/一覧</h3>
  </div>
  <%= form_with model: @address do |f| %>
  <div class="row">
    <div class="col-2 mt-4 ml-5 mb-3">
      <%= f.label :"郵便番号（ハイフンなし）" %>
    </div>
    <%= f.text_field :postal_code, placeholder: "0000000", :class => "mt-4 ml-4 mb-3"%>
  </div>
  <div class="row">
    <div class="col-2 ml-5">
    <%= f.label :"住所" %>
    </div>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町０−０", :class => "ml-4 mb-3 col-4" %>
  </div>
  <div class="row">
    <div class="col-2 ml-5">
      <%= f.label :"宛名" %>
    </div>
    <%= f.text_field :name, placeholder: "令和道子", :class => "ml-4 mb-3"  %>
    <div class="col-3"></div>
    <%= f.submit '新規登録', :class => "btn btn-success pl-5 pr-5" %>
  </div>

  <% end %>

  <table class="table table-bordered col-7 ml-4 mt-5">
    <tr class="table-active">
      <div class="row">
        <th class="col-1">郵便番号</th>
        <th class="col-3">住所</th>
        <th class="col-1">宛名</th>
        <th class="col-2"></th>
      </div>
     </tr>
    <% @addresses.each do |address| %>
      <% if address.customer == current_customer %>
        <tr>
          <td>
            <%= address.postal_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger ml-5" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>