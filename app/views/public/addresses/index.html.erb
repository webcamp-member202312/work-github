<h3>配送先登録/一覧</h3>
<%= form_with model: @address do |f| %>
<%= f.label :"郵便番号（ハイフンなし）" %>
<%= f.text_field :postal_code, placeholder: "0000000"  %>
<%= f.label :"住所" %>
<%= f.text_area :address, placeholder: "東京都渋谷区代々木神園町０−０"  %>
<%= f.label :"宛名" %>
<%= f.text_field :name, placeholder: "令和道子"  %>
<%= f.submit '新規登録' %>
<% end %>

<table class="table table-hover table-inverse">
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <% @addresses.each do |address| %>
    <tr>
      <td>
        <%= address.postal_code %>
      </td>
      <td>
        <%= address.address %>
      </td>
      <td>
        <%= address.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id), class: "btn-success" %>
        <% if address.customer == current_customer %>
         <%= link_to "削除する", address_path(address.id), method: :delete %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>