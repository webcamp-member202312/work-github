<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="pt-5 pb-3">マイページ</h3>
  </div>
  <div class="row">
    <h4 class="ml-5">登録情報</h4>
    <%= link_to "編集する", customers_information_edit_path, :class => "btn btn-success ml-3 mb-3" %>
  </div>
  <table class="table table-bordered col-6 ml-4">
    <tr class="pl-3">
      <th class="table-active col-3">
        氏名
      </th>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>
    <tr>
      <th class="table-active">
        カナ
      </th>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>
    <tr>
      <th class="table-active">
        郵便番号
      </th>
      <td>
        <%= @customer.postal_code %>
      </td>
    </tr>
    <tr>
      <th class="table-active">
        住所
      </th>
      <td>
        <%= @customer.address %>
      </td>
    </tr>
    <tr>
      <th class="table-active">
        電話番号
      </th>
      <td>
        <%= @customer.telephone_number %>
      </td>
    </tr>
    <th class="table-active">メールアドレス</th>
    <td>
      <%= @customer.email %>
    </td>
  </table>
  <div class="row">
    <h3 class="ml-5 mt-3">配送先</h3>
    <%= link_to "一覧を見る", addresses_path, :class => "btn btn-primary ml-5 mt-3" %>
  </div>
  <div class="row">
    <h3 class="ml-5 mt-3">注文履歴</h3>
    <%= link_to "一覧を見る", orders_path, :class => "btn btn-primary ml-3 mt-3 pr-3" %>
  </div>
</div>