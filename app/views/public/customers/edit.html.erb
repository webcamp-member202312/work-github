<h1>会員情報編集</h1>
<%= form_with model: @customer,url: customers_information_path do |f| %>
  <div class="field">
    <label>氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div>
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div>
    <label>電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>
  <div>
    <label>メールアドレス</label>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-success btn-sm" %>
  </div>
<% end %>