<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
    <h3 class="ml-5 mt-5">会員情報編集</h3>
  </div>
  <%= form_with model: @customer,url: customers_information_path do |f| %>
    <div class="row">
      <div class="col-1"></div>
      <label class="col-2">氏名</label>
      <%= f.text_field :last_name, :class => "mr-5 mb-3" %>
      <%= f.text_field :first_name, :class => "mb-3"  %>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <label class="col-2 mb-3">フリガナ</label>
      <%= f.text_field :last_name_kana, :class => "mr-5 mb-3" %>
      <%= f.text_field :first_name_kana, :class => "mb-3"%>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <label class="col-2 mb-3">郵便番号</label>
      <%= f.text_field :postal_code, :class => "mb-3" %>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <label class="col-2 mb-3">住所</label>
      <%= f.text_field :address, :class => "mb-3" %>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <label class="col-2 mb-3">電話番号</label>
      <%= f.text_field :telephone_number, :class => "mb-3" %>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <label class="col-2 mb-3">メールアドレス</label>
      <%= f.text_field :email %>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-3 mt-4">
        <%= f.submit "編集内容を保存", :class => "btn btn-success pl-5 pr-5" %>
      </div>
      <div class="col-1"></div>
      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger mt-4" %>
      
    </div>
  <% end %>
</div>