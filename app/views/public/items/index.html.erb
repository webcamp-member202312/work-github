<div class="container-fluid">
  <div class="row">
    <div class="d-flex">
    <div class="genre_search">
      <table class="table">
          <tr>
            <th>ジャンル検索</th>
          </tr>
      
          <%= form_with url: genre_search_path, method: :get do |f| %>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get %></td>
                </tr>
              <% end %>
          <% end %>
      </table>
    </div>
  
   
    <div class="row">
      <div>
        <h2>商品一覧</h2>
      </div>
      <% @items.each do |item| %>
      <div>
        <% if item.image.attached? %>
          <%= image_tag item.image, size: "150x130" %>
        <% else %>
           <%= image_tag 'no_image', size: "150x130" %>
        <% end %>
      </div>
      <div>
        <%= link_to item.name, item_path(item.id) %>
      </div>
      <div>
        <%= (item.price * 1.1).round %>円
      </div>
      <% end %>
   
  
      <%= paginate @items %>
      </div>
    </div>
  </div>
</div>