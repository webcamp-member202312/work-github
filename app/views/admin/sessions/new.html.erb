<div class="container">
  <h4 class="mt-4 mb-4">管理者ログイン</h4>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2 mb-3">
        <%= f.label :メールアドレス %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "col-5 mb-3", placeholder: "sample@example.com"  %>
    </div>

    <div class="row">
      <div class="col-1"></div>
      <div class="col-2">
        <%= f.label :パスワード %>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", :class => "col-5" %>
    </div>

    <div class="actions mt-5">
      <div class="row">
        <div class="col-3"></div>
        <%= f.submit "ログイン", :class => "btn btn-primary pl-5 pr-5" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "admin/shared/links" %>
