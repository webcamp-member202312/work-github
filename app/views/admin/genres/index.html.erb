<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
    <h4 class="mt-4 mb-4">ジャンル一覧・追加</h4>
  </div>
  <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
    <div class="row">
      <div class="ml-5">
        <%= f.label :"ジャンル名", class: "mr-3" %>
      </div>
      <div class="ml-5">
        <%= f.text_field :name, placeholder: "ジャンル名", class: "mr-5" %>
      </div>
      <td><%= f.submit'新規登録',class: "btn btn-success" %></td>
    </div>
  <% end %>
  <table class="table table-bordered col-3 mt-5 ml-3">
    <tr>
      <th class="table-active">ジャンル</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td class="d-flex">
          <div class="col-7">
            <%= genre.name %>
          </div>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
        </td>
      </tr>
    <%end%>
  </table>
</div>
