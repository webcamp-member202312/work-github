<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
        <h3>注文履歴一覧</h3>
        <table class="table">
          <tr>
            <td>購入日時</td>
            <td>購入者</td>
            <td>注文個数</td>
            <td>ステータス</td>
          </tr>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to  admin_order_path(order.id) do %>
                  <%=  l order.created_at, format: :long %>
                <% end %>
              </td>
              <td><%= order.customer.full_name %>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </table>
        <%= paginate @orders %>
    </div>
  </div>
</div>
