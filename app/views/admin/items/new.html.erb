<div class="container">
  <h3 class="mt-4 mb-4">商品新規登録</h3>
  <%= form_with model: @item,url: admin_items_path do |f| %>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2 mb-3">
        <%= f.label :"商品画像" %>
      </div>
      <div class="ml-5 mb-3">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2 mb-3">
        <%= f.label :"商品名" %>
      </div>
      <div class="ml-5 mb-3">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2 mb-3">
        <%= f.label :"商品説明" %>
      </div>
      <div class="ml-5 mb-3">
        <%= f.text_area :introduction, :class => "pb-5" %>
      </div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2 mb-3">
        <%= f.label :"ジャンル" %>
      </div>
      <div class="ml-5 mb-3">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2 mb-3">
        <%= f.label :"税抜価格" %>
      </div>
      <div class="ml-5 mb-3">
        <%= f.text_field :price %>円
      </div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-2 mb-3">
        <%= f.label :"販売ステータス" %>
      </div>
      <div class="ml-5 mb-3">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>
    </div>
    <div class="row">
      <div class="m-auto">
      <%= f.submit '新規登録', :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>