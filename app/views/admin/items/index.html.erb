<h2>商品一覧</h2>
  <table class="table table-hover table-inverse">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to item.name, admin_item_path(item.id) %>
        </td>
        <td>
          <%= item.price %>
        </td>
        <td>
          <%= item.genre.name %>
        </td>
        <td>
          <% if item.is_active %>
            <p class="text-success"><strong>販売中</strong></p>
          <% elsif %>
            <p class="text-muted"><strong>販売停止中</strong></p>
          <% end %>
        </td>
      </tr>
    <% end %>

  </table>
  <%= paginate @items %>