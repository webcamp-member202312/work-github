<div class="container">
  <h3 class="mt-4 mb-4">商品一覧</h3>
    <table class="table table-hover table-inverse col-12">
      <tr>
        <th class="table-active col-1">商品ID</th>
        <th class="table-active col-4">商品名</th>
        <th class="table-active col-2">税抜価格</th>
        <th class="table-active col-3">ジャンル</th>
        <th class="table-active">ステータス</th>
      </tr>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to item.name, admin_item_path(item.id) %>
          </td>
          <td>
            <%= item.price %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
            <% if item.is_active %>
              <p class="text-success"><strong>販売中</strong></p>
            <% elsif %>
              <p class="text-muted"><strong>販売停止中</strong></p>
            <% end %>
          </td>
        </tr>
      <% end %>

    </table>
  <div class="row">
    <div class="m-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>