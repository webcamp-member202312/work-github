<div class="container-fluid">
  <div class="row">
    <div class="col-2"></div>
    <h3 class="mt-4 mb-4">商品詳細</h3>
  </div>
  <div class="d-flex">
    <div class="container col-4 mt-5">
      <div class="row">
        <div class="col-2"></div>
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "300x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </div>
    </div>

    <div class="container mt-5">
      <div class="row">
        <div class="col-2">
          <h6 class="mb-4">商品名</h6>
        </div>
        <%= @item.name %>
      </div>
      <div class="row">
        <div class="col-2">
          <h6 class="mb-4">商品説明</h6>
        </div>
        <%= @item.introduction %>
      </div>
      <div class="row">
        <div class="col-2">
          <h6 class="mb-4">ジャンル</h6>
        </div>
        <%= @item.genre.name %>
      </div>
      <div class="row">
        <div class="col-2">
          <h6 class="mb-4">税込価格<br>(税抜価格)</h6>
        </div>
        <%= (@item.price * 1.1).round %>円 (<%= @item.price %>円)
      </div>
      <div class="row">
        <div class="col-2">
          <h6 class="mb-4">販売ステータス</h6>
        </div>
        <% if @item.is_active %>
           <p class="text-success"><strong>販売中</strong></p>
         <% elsif %>
           <p class="text-muted"><strong>販売停止中</strong></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="m-auto">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg pl-5 pr-5" %>
    </div>
  </div>
</div>