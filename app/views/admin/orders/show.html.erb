<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <h3>注文履歴詳細</h3>
  
      <table class="table">
        <tr>
          <td>購入者</td>
          <td><%= @order.customer.full_name %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>〒<%= @order.postal_code + "　" + @order.address + "　" + @order.name %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <%= f.select :order_status, @order.order_status_i18n.invert %>
          <%= f.submit "更新", class: "btn btn-success" %>
        </tr>
      </table>
  
      <h4>注文内容</h4>
      <table class="table">
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
          <td>制作ステータス</td>
        </tr>
        <% @order_details.each do |order_detail| %>
        <% @sum = 0 %>
        <% @sum += order_detail.item.with_tax_price %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.amount * order_detail.item.with_tax_price %></td>
            <td>
            <%= f.select :manufacture_status, @order_detail.manufacture_status_i18n.invert %>
            <%= f.submit "更新", class: "btn btn-success" %>
         　  </td>
          </tr>
        <% end %>
      </table>
      
      <table class="table">
        <tr>
          <td>商品合計</td>
          <td><%= @sum %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @sum + 800 %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>